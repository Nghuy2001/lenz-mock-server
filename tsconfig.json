{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "prisma/seed.ts",
    "./main.d.ts",
    "test",
    "prisma/seed/**/*.ts",
    "importMasterData/logic-component-templates.*",
    "src/utils/script/createMasterData/mail-templates",
    "src/utils/script/createMasterData/firstSeedData.ts"
  ],
  "exclude": [
    "src/utils/script/createMasterData/*"
  ]
}
